{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "verification/verification_procedure.schema.json",
  "title": "動作確認手順",
  "description": "動作確認の詳細な手順を記述するドキュメント",
  "type": "object",
  "required": ["meta", "procedures", "references"],
  "properties": {
    "meta": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/meta_base" },
        {
          "properties": {
            "category": { "const": "verification" },
            "doc_type": { "const": "verification_procedure" }
          }
        }
      ]
    },
    "overview": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/overview_background_goal" },
        {
          "properties": {
            "related_plan": { "type": "string" },
            "environment": { "type": "string" }
          }
        }
      ]
    },
    "procedures": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "steps"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "precondition": { "type": "string" },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "action": { "type": "string" },
                "expected": { "type": "string" },
                "note": { "type": "string" }
              }
            }
          },
          "postcondition": { "type": "string" }
        }
      },
      "x-ai-guid": "手順一覧。id, title, steps 必須。precondition, steps（action, expected, note）, postcondition。"
    },
    "references": {
      "$ref": "../../../../common/scheme.json#/definitions/references",
      "x-ai-guid": "共通は common/scheme.json#/definitions/references。1件以上の { title, url }。"
    },
    "ai_context": {
      "$ref": "../../../../common/scheme.json#/definitions/ai_context",
      "x-ai-guid": "任意。共通は common/scheme.json#/definitions/ai_context。"
    }
  }
}
