{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "verification/verification_plan.schema.json",
  "title": "動作確認計画",
  "description": "動作確認の計画を立てるドキュメント",
  "type": "object",
  "required": ["meta", "target", "test_cases", "references"],
  "x-ai-guid": {
    "intro": "動作確認の計画を立てるドキュメント。",
    "required_sections": ["meta", "target", "test_cases", "references"]
  },
  "properties": {
    "meta": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/meta_base" },
        {
          "properties": {
            "category": { "const": "verification" },
            "doc_type": { "const": "verification_plan" }
          }
        }
      ],
      "x-ai-guid": "共通は common/scheme.json#/definitions/meta_base。この doc では category: verification, doc_type: verification_plan。"
    },
    "overview": {
      "$ref": "../../../../common/scheme.json#/definitions/overview_background_goal",
      "x-ai-guid": "任意。共通は common/scheme.json#/definitions/overview_background_goal。"
    },
    "target": {
      "type": "object",
      "required": ["feature"],
      "properties": {
        "feature": { "type": "string" },
        "pr_url": { "type": "string" },
        "environment": { "type": "string" },
        "related_docs": { "type": "array", "items": { "type": "string" } }
      },
      "x-ai-guid": "対象。feature 必須。pr_url, environment, related_docs（文字列配列）。"
    },
    "scope": {
      "type": "object",
      "properties": {
        "in": { "type": "array", "items": { "type": "string" } },
        "out": { "type": "array", "items": { "type": "string" } }
      },
      "x-ai-guid": "スコープ。in, out。"
    },
    "prerequisites": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": { "type": "string" },
          "verified": { "type": "boolean" }
        }
      }
    },
    "test_cases": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "category": { "type": "string", "enum": ["normal", "boundary", "error", "performance", "security"] },
          "priority": { "type": "string", "enum": ["high", "medium", "low"] },
          "precondition": { "type": "string" },
          "steps": { "type": "array", "items": { "type": "string" } },
          "expected_result": { "type": "string" }
        }
      },
      "x-ai-guid": "テストケース一覧。id, title 必須。category, priority, precondition, steps, expected_result。"
    },
    "references": {
      "$ref": "../../../../common/scheme.json#/definitions/references",
      "x-ai-guid": "共通は common/scheme.json#/definitions/references。1件以上の { title, url }。"
    },
    "ai_context": {
      "$ref": "../../../../common/scheme.json#/definitions/ai_context",
      "x-ai-guid": "任意。共通は common/scheme.json#/definitions/ai_context。"
    }
  }
}
