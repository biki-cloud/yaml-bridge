{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "design/requirements.schema.json",
  "title": "要件整理",
  "description": "何をすればいいのか？を整理するドキュメント",
  "type": "object",
  "required": ["meta", "overview", "requirements", "references"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["title", "category", "doc_type", "status", "version"],
      "properties": {
        "title": { "type": "string" },
        "category": { "const": "design" },
        "doc_type": { "const": "requirements" },
        "status": { "type": "string", "enum": ["todo", "wip", "done"] },
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "author": { "type": "string" },
        "created_at": { "type": "string" },
        "updated_at": { "type": "string" }
      }
    },
    "overview": {
      "type": "object",
      "required": ["background", "goal"],
      "properties": {
        "background": { "type": "string" },
        "goal": { "type": "string" },
        "scope": {
          "type": "object",
          "properties": {
            "in": { "type": "array", "items": { "type": "string" } },
            "out": { "type": "array", "items": { "type": "string" } }
          }
        }
      }
    },
    "requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "description"],
        "properties": {
          "id": { "type": "string" },
          "description": { "type": "string" },
          "type": { "type": "string", "enum": ["functional", "non_functional"] },
          "priority": { "type": "string", "enum": ["must", "should", "could", "wont"] },
          "acceptance_criteria": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "enum": ["technical", "business", "resource", "time"] },
          "description": { "type": "string" }
        }
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "risk": { "type": "string" },
          "impact": { "type": "string", "enum": ["high", "medium", "low"] },
          "mitigation": { "type": "string" }
        }
      }
    },
    "references": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["title", "url"],
        "properties": {
          "title": { "type": "string" },
          "url": { "type": "string", "format": "uri" }
        }
      }
    }
  }
}
