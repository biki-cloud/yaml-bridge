{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "design/requirements.schema.json",
  "title": "要件整理",
  "description": "何をすればいいのか？を整理するドキュメント",
  "type": "object",
  "required": ["meta", "overview", "requirements", "references"],
  "properties": {
    "meta": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/meta_base" },
        {
          "properties": {
            "category": { "const": "design" },
            "doc_type": { "const": "requirements" }
          }
        }
      ]
    },
    "overview": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/overview_background_goal" },
        {
          "properties": {
            "scope": {
              "type": "object",
              "properties": {
                "in": { "type": "array", "items": { "type": "string" } },
                "out": { "type": "array", "items": { "type": "string" } }
              }
            }
          }
        }
      ]
    },
    "requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "description"],
        "properties": {
          "id": { "type": "string" },
          "description": { "type": "string" },
          "type": { "type": "string", "enum": ["functional", "non_functional"] },
          "priority": { "type": "string", "enum": ["must", "should", "could", "wont"] },
          "acceptance_criteria": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "enum": ["technical", "business", "resource", "time"] },
          "description": { "type": "string" }
        }
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "risk": { "type": "string" },
          "impact": { "type": "string", "enum": ["high", "medium", "low"] },
          "mitigation": { "type": "string" }
        }
      }
    },
    "references": { "$ref": "../../../../common/scheme.json#/definitions/references" },
    "ai_context": { "$ref": "../../../../common/scheme.json#/definitions/ai_context" }
  }
}
