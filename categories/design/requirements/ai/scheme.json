{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "design/requirements.schema.json",
  "title": "要件整理",
  "description": "何をすればいいのか？を整理するドキュメント",
  "type": "object",
  "required": ["meta", "overview", "requirements", "references"],
  "x-ai-guid": {
    "intro": "何をすればいいのか？を整理するドキュメント。",
    "required_sections": ["meta", "overview", "requirements", "references"]
  },
  "properties": {
    "meta": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/meta_base" },
        {
          "properties": {
            "category": { "const": "design" },
            "doc_type": { "const": "requirements" }
          }
        }
      ],
      "x-ai-guid": "共通は common/scheme.json#/definitions/meta_base。この doc では category: design, doc_type: requirements。"
    },
    "overview": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/overview_background_goal" },
        {
          "properties": {
            "scope": {
              "type": "object",
              "properties": {
                "in": { "type": "array", "items": { "type": "string" } },
                "out": { "type": "array", "items": { "type": "string" } }
              }
            }
          }
        }
      ],
      "x-ai-guid": "背景・ゴール・related_docs。形式は common/scheme.json#/definitions/overview_background_goal。scope.in/out はこの doc 固有。"
    },
    "requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "description"],
        "properties": {
          "id": { "type": "string" },
          "description": { "type": "string" },
          "type": { "type": "string", "enum": ["functional", "non_functional"] },
          "priority": { "type": "string", "enum": ["must", "should", "could", "wont"] },
          "acceptance_criteria": { "type": "array", "items": { "type": "string" } }
        }
      },
      "x-ai-guid": "要件一覧。id, description 必須。type（functional/non_functional）, priority（must/should/could/wont）, acceptance_criteria。"
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "enum": ["technical", "business", "resource", "time"] },
          "description": { "type": "string" }
        }
      },
      "x-ai-guid": "制約一覧。type は technical / business / resource / time。"
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "risk": { "type": "string" },
          "impact": { "type": "string", "enum": ["high", "medium", "low"] },
          "mitigation": { "type": "string" }
        }
      },
      "x-ai-guid": "リスク一覧。risk, impact（high/medium/low）, mitigation。"
    },
    "references": {
      "$ref": "../../../../common/scheme.json#/definitions/references",
      "x-ai-guid": "共通は common/scheme.json#/definitions/references。1件以上の { title, url }。"
    },
    "ai_context": {
      "$ref": "../../../../common/scheme.json#/definitions/ai_context",
      "x-ai-guid": "任意。共通は common/scheme.json#/definitions/ai_context。"
    }
  }
}
