{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "development/pull_request.schema.json",
  "title": "PR情報",
  "description": "Pull Requestの情報をまとめるドキュメント",
  "type": "object",
  "required": ["meta", "pull_request", "references"],
  "x-ai-guid": {
    "intro": "Pull Requestの情報をまとめるドキュメント。",
    "required_sections": ["meta", "pull_request", "references"]
  },
  "properties": {
    "meta": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/meta_base" },
        {
          "properties": {
            "category": { "const": "development" },
            "doc_type": { "const": "pull_request" }
          }
        }
      ],
      "x-ai-guid": "共通は common/scheme.json#/definitions/meta_base。この doc では category: development, doc_type: pull_request。"
    },
    "pull_request": {
      "type": "object",
      "required": ["title"],
      "properties": {
        "url": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "branch": { "type": "string" },
        "base_branch": { "type": "string" },
        "reviewers": { "type": "array", "items": { "type": "string" } },
        "labels": { "type": "array", "items": { "type": "string" } },
        "checklist": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "item": { "type": "string" },
              "done": { "type": "boolean" }
            }
          }
        }
      },
      "x-ai-guid": "PR情報。title 必須。url, description, branch, base_branch, reviewers, labels, checklist（item, done）。"
    },
    "overview": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/overview_background_goal" },
        {
          "properties": {
            "changes_summary": { "type": "string" }
          }
        }
      ],
      "x-ai-guid": "任意。共通 overview_background_goal + changes_summary。"
    },
    "testing": {
      "type": "object",
      "properties": {
        "tested_items": { "type": "array", "items": { "type": "string" } },
        "not_tested": { "type": "array", "items": { "type": "string" } }
      },
      "x-ai-guid": "tested_items, not_tested。"
    },
    "notes": {
      "type": "array",
      "items": { "type": "string" },
      "x-ai-guid": "レビュー時の注意点等。"
    },
    "references": {
      "$ref": "../../../../common/scheme.json#/definitions/references",
      "x-ai-guid": "共通は common/scheme.json#/definitions/references。1件以上の { title, url }。"
    },
    "ai_context": {
      "$ref": "../../../../common/scheme.json#/definitions/ai_context",
      "x-ai-guid": "任意。共通は common/scheme.json#/definitions/ai_context。"
    }
  }
}
