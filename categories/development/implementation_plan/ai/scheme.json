{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "development/implementation_plan.schema.json",
  "title": "実装計画",
  "description": "何をどう実装するか計画するドキュメント",
  "type": "object",
  "required": ["meta", "overview", "approach", "references"],
  "x-ai-guid": {
    "intro": "何をどう実装するか計画するドキュメント。",
    "required_sections": ["meta", "overview", "approach", "references"]
  },
  "properties": {
    "meta": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/meta_base" },
        {
          "properties": {
            "category": { "const": "development" },
            "doc_type": { "const": "implementation_plan" },
            "target_type": { "type": "string", "enum": ["api", "batch", "web", "cli", "library", "infrastructure", "other"] }
          }
        }
      ],
      "x-ai-guid": "共通は common/scheme.json#/definitions/meta_base。この doc では category: development, doc_type: implementation_plan。target_type は api/batch/web/cli/library/infrastructure/other。"
    },
    "overview": {
      "$ref": "../../../../common/scheme.json#/definitions/overview_background_goal",
      "x-ai-guid": "共通は common/scheme.json#/definitions/overview_background_goal。背景・ゴール・related_docs。"
    },
    "target": {
      "type": "object",
      "properties": {
        "endpoint": { "type": "string" },
        "method": { "type": "string", "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"] },
        "description": { "type": "string" }
      },
      "x-ai-guid": "対象の endpoint, method（GET/POST/等）, description。"
    },
    "approach": {
      "type": "object",
      "required": ["summary"],
      "properties": {
        "summary": { "type": "string" },
        "patterns": { "type": "array", "items": { "type": "string" } },
        "technologies": { "type": "array", "items": { "type": "string" } }
      },
      "x-ai-guid": "実装アプローチ。summary 必須。patterns, technologies。"
    },
    "changes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "file": { "type": "string" },
          "change_type": { "type": "string", "enum": ["add", "modify", "delete", "rename"] },
          "description": { "type": "string" }
        }
      },
      "x-ai-guid": "変更一覧。file, change_type（add/modify/delete/rename）, description。"
    },
    "testing": {
      "type": "object",
      "properties": {
        "unit_tests": { "type": "array", "items": { "type": "string" } },
        "integration_tests": { "type": "array", "items": { "type": "string" } }
      },
      "x-ai-guid": "unit_tests, integration_tests。"
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "risk": { "type": "string" },
          "impact": { "type": "string", "enum": ["high", "medium", "low"] },
          "mitigation": { "type": "string" }
        }
      },
      "x-ai-guid": "リスク一覧。risk, impact（high/medium/low）, mitigation。"
    },
    "references": {
      "$ref": "../../../../common/scheme.json#/definitions/references",
      "x-ai-guid": "共通は common/scheme.json#/definitions/references。1件以上の { title, url }。"
    },
    "ai_context": {
      "$ref": "../../../../common/scheme.json#/definitions/ai_context",
      "x-ai-guid": "任意。共通は common/scheme.json#/definitions/ai_context。"
    }
  }
}
