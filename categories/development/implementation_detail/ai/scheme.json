{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "development/implementation_detail.schema.json",
  "title": "実装詳細",
  "description": "実装の詳細を記述するドキュメント",
  "type": "object",
  "required": ["meta", "changes", "references"],
  "properties": {
    "meta": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/meta_base" },
        {
          "properties": {
            "category": { "const": "development" },
            "doc_type": { "const": "implementation_detail" },
            "target_type": { "type": "string", "enum": ["api", "batch", "web", "cli", "library", "infrastructure", "other"] }
          }
        }
      ]
    },
    "overview": {
      "type": "object",
      "properties": {
        "summary": { "type": "string" },
        "related_plan": { "type": "string" }
      }
    },
    "changes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["file"],
        "properties": {
          "file": { "type": "string" },
          "change_type": { "type": "string", "enum": ["add", "modify", "delete", "rename"] },
          "description": { "type": "string" },
          "before": { "type": "string" },
          "after": { "type": "string" }
        }
      }
    },
    "notes": { "type": "array", "items": { "type": "string" } },
    "references": { "$ref": "../../../../common/scheme.json#/definitions/references" },
    "ai_context": { "$ref": "../../../../common/scheme.json#/definitions/ai_context" }
  }
}
