{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "development/implementation_detail.schema.json",
  "title": "実装詳細",
  "description": "実装の詳細を記述するドキュメント",
  "type": "object",
  "required": ["meta", "changes", "references"],
  "x-ai-guid": {
    "intro": "実装の詳細を記述するドキュメント。",
    "required_sections": ["meta", "changes", "references"]
  },
  "properties": {
    "meta": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/meta_base" },
        {
          "properties": {
            "category": { "const": "development" },
            "doc_type": { "const": "implementation_detail" },
            "target_type": { "type": "string", "enum": ["api", "batch", "web", "cli", "library", "infrastructure", "other"] }
          }
        }
      ],
      "x-ai-guid": "共通は common/scheme.json#/definitions/meta_base。この doc では category: development, doc_type: implementation_detail。target_type は api/batch/web/cli/library/infrastructure/other。"
    },
    "overview": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/overview_background_goal" },
        {
          "properties": {
            "summary": { "type": "string" },
            "related_plan": { "type": "string" }
          }
        }
      ],
      "x-ai-guid": "任意。共通 overview_background_goal + summary, related_plan。"
    },
    "changes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["file"],
        "properties": {
          "file": { "type": "string" },
          "change_type": { "type": "string", "enum": ["add", "modify", "delete", "rename"] },
          "description": { "type": "string" },
          "before": { "type": "string" },
          "after": { "type": "string" }
        }
      },
      "x-ai-guid": "変更一覧。file 必須。change_type（add/modify/delete/rename）, description, before, after。"
    },
    "notes": {
      "type": "array",
      "items": { "type": "string" },
      "x-ai-guid": "実装時のメモ。"
    },
    "references": {
      "$ref": "../../../../common/scheme.json#/definitions/references",
      "x-ai-guid": "共通は common/scheme.json#/definitions/references。1件以上の { title, url }。"
    },
    "ai_context": {
      "$ref": "../../../../common/scheme.json#/definitions/ai_context",
      "x-ai-guid": "任意。共通は common/scheme.json#/definitions/ai_context。"
    }
  }
}
