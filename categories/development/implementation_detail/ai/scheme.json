{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "development/implementation_detail.schema.json",
  "title": "実装詳細",
  "description": "実装の詳細を記述するドキュメント",
  "type": "object",
  "required": ["meta", "changes", "references"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["title", "category", "doc_type", "status", "version"],
      "properties": {
        "title": { "type": "string" },
        "category": { "const": "development" },
        "doc_type": { "const": "implementation_detail" },
        "target_type": { "type": "string", "enum": ["api", "batch", "web", "cli", "library", "infrastructure", "other"] },
        "status": { "type": "string", "enum": ["todo", "wip", "done"] },
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "author": { "type": "string" },
        "created_at": { "type": "string" },
        "updated_at": { "type": "string" }
      }
    },
    "overview": {
      "type": "object",
      "properties": {
        "summary": { "type": "string" },
        "related_plan": { "type": "string" }
      }
    },
    "changes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["file"],
        "properties": {
          "file": { "type": "string" },
          "change_type": { "type": "string", "enum": ["add", "modify", "delete", "rename"] },
          "description": { "type": "string" },
          "before": { "type": "string" },
          "after": { "type": "string" }
        }
      }
    },
    "notes": { "type": "array", "items": { "type": "string" } },
    "references": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["title", "url"],
        "properties": {
          "title": { "type": "string" },
          "url": { "type": "string", "format": "uri" }
        }
      }
    },
    "ai_context": {
      "type": "object",
      "description": "AIの現在の考え・次のアクション（人間用MDで図化される）",
      "properties": {
        "current_thinking": {
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        },
        "next_actions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "label"],
            "properties": {
              "id": { "type": "string" },
              "label": { "type": "string" },
              "detail": { "type": "string" }
            }
          }
        },
        "decision_flow": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "label"],
            "properties": {
              "id": { "type": "string" },
              "label": { "type": "string" },
              "next": { "type": "string" },
              "next_condition": { "type": "array", "items": { "type": "string" } }
            }
          }
        }
      }
    }
  }
}
