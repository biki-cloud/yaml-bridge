{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "development/implementation_result.schema.json",
  "title": "修正結果",
  "description": "実装の結果をまとめるドキュメント",
  "type": "object",
  "required": ["meta", "result"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["title", "category", "doc_type", "status", "version"],
      "properties": {
        "title": { "type": "string" },
        "category": { "const": "development" },
        "doc_type": { "const": "implementation_result" },
        "status": { "type": "string", "enum": ["todo", "wip", "done"] },
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "author": { "type": "string" },
        "created_at": { "type": "string" },
        "updated_at": { "type": "string" }
      }
    },
    "overview": {
      "type": "object",
      "properties": {
        "related_plan": { "type": "string" },
        "related_pr": { "type": "string" }
      }
    },
    "result": {
      "type": "object",
      "required": ["summary"],
      "properties": {
        "summary": { "type": "string" },
        "files_changed": { "type": "integer" },
        "lines_added": { "type": "integer" },
        "lines_deleted": { "type": "integer" },
        "commits": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "hash": { "type": "string" },
              "message": { "type": "string" }
            }
          }
        }
      }
    },
    "issues_found": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": { "type": "string" },
          "resolution": { "type": "string" }
        }
      }
    },
    "lessons_learned": { "type": "array", "items": { "type": "string" } }
  }
}
