{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "development/implementation_result.schema.json",
  "title": "修正結果",
  "description": "実装の結果をまとめるドキュメント",
  "type": "object",
  "required": ["meta", "result", "references"],
  "properties": {
    "meta": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/meta_base" },
        {
          "properties": {
            "category": { "const": "development" },
            "doc_type": { "const": "implementation_result" }
          }
        }
      ]
    },
    "overview": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/overview_background_goal" },
        {
          "properties": {
            "related_plan": { "type": "string" },
            "related_pr": { "type": "string" }
          }
        }
      ]
    },
    "result": {
      "type": "object",
      "required": ["summary"],
      "properties": {
        "summary": { "type": "string" },
        "files_changed": { "type": "integer" },
        "lines_added": { "type": "integer" },
        "lines_deleted": { "type": "integer" },
        "commits": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "hash": { "type": "string" },
              "message": { "type": "string" }
            }
          }
        }
      }
    },
    "issues_found": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": { "type": "string" },
          "resolution": { "type": "string" }
        }
      }
    },
    "lessons_learned": { "type": "array", "items": { "type": "string" } },
    "references": { "$ref": "../../../../common/scheme.json#/definitions/references" },
    "ai_context": { "$ref": "../../../../common/scheme.json#/definitions/ai_context" }
  }
}
