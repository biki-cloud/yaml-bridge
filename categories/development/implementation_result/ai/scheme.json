{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "development/implementation_result.schema.json",
  "title": "修正結果",
  "description": "実装の結果をまとめるドキュメント",
  "type": "object",
  "required": ["meta", "result", "references"],
  "x-ai-guid": {
    "intro": "実装の結果をまとめるドキュメント。",
    "required_sections": ["meta", "result", "references"]
  },
  "properties": {
    "meta": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/meta_base" },
        {
          "properties": {
            "category": { "const": "development" },
            "doc_type": { "const": "implementation_result" }
          }
        }
      ],
      "x-ai-guid": "共通は common/scheme.json#/definitions/meta_base。この doc では category: development, doc_type: implementation_result。"
    },
    "overview": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/overview_background_goal" },
        {
          "properties": {
            "related_plan": { "type": "string" },
            "related_pr": { "type": "string" }
          }
        }
      ],
      "x-ai-guid": "任意。共通 overview_background_goal + related_plan, related_pr。"
    },
    "result": {
      "type": "object",
      "required": ["summary"],
      "properties": {
        "summary": { "type": "string" },
        "files_changed": { "type": "integer" },
        "lines_added": { "type": "integer" },
        "lines_deleted": { "type": "integer" },
        "commits": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "hash": { "type": "string" },
              "message": { "type": "string" }
            }
          }
        }
      },
      "x-ai-guid": "実装結果。summary 必須。files_changed, lines_added, lines_deleted, commits（hash, message）。"
    },
    "issues_found": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "description": { "type": "string" },
          "resolution": { "type": "string" }
        }
      },
      "x-ai-guid": "発見した問題。description, resolution。"
    },
    "lessons_learned": {
      "type": "array",
      "items": { "type": "string" },
      "x-ai-guid": "学んだこと。"
    },
    "references": {
      "$ref": "../../../../common/scheme.json#/definitions/references",
      "x-ai-guid": "共通は common/scheme.json#/definitions/references。1件以上の { title, url }。"
    },
    "ai_context": {
      "$ref": "../../../../common/scheme.json#/definitions/ai_context",
      "x-ai-guid": "任意。共通は common/scheme.json#/definitions/ai_context。"
    }
  }
}
