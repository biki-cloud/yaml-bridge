{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "overview/wbs.schema.json",
  "title": "WBS（作業分解構成）",
  "description": "案件の作業分解・マイルストーン・進捗管理を行うドキュメント",
  "type": "object",
  "required": ["meta", "overview", "wbs_elements", "references"],
  "x-ai-guid": {
    "intro": "案件のWBS（作業分解構成）。階層タスク・マイルストーン・進捗を管理する。",
    "required_sections": ["meta", "overview", "wbs_elements", "references"]
  },
  "properties": {
    "meta": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/meta_base" },
        {
          "properties": {
            "category": { "const": "overview" },
            "doc_type": { "const": "wbs" }
          }
        }
      ],
      "x-ai-guid": "共通は common/scheme.json#/definitions/meta_base。この doc では category: overview, doc_type: wbs。"
    },
    "overview": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/overview_background_goal" },
        {
          "properties": {
            "scope": {
              "type": "object",
              "properties": {
                "in": { "type": "array", "items": { "type": "string" } },
                "out": { "type": "array", "items": { "type": "string" } }
              }
            }
          }
        }
      ],
      "x-ai-guid": "背景・ゴール・related_docs。形式は common/scheme.json#/definitions/overview_background_goal。scope.in/out はこの doc 固有。ゴール文言は進捗説明で利用。"
    },
    "wbs_elements": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "type", "wbs_code"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "type": { "type": "string", "enum": ["summary", "task", "milestone"] },
          "wbs_code": { "type": "string", "description": "階層コード（例: 1, 1.1, 1.1.1）" },
          "description": { "type": "string" },
          "category": { "type": "string", "enum": ["investigation", "design", "development", "verification"] },
          "priority": { "type": "string", "enum": ["high", "medium", "low"] },
          "status": { "type": "string", "enum": ["todo", "wip", "done"] },
          "dependencies": { "type": "array", "items": { "type": "string" } },
          "estimated_hours": { "type": "number" },
          "target_date": { "type": "string", "description": "type: milestone のとき目標日（任意）" }
        }
      },
      "x-ai-guid": "WBS要素一覧。id, title, type（summary/task/milestone）, wbs_code 必須。category, priority, status, dependencies, estimated_hours。milestone は target_date 任意。"
    },
    "milestones": {
      "type": "array",
      "description": "マイルストーン一覧（WBS内の type:milestone と対応。重複を避けるなら wbs_elements の milestone のみでも可）",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "wbs_code": { "type": "string" },
          "element_id": { "type": "string" },
          "target_date": { "type": "string" },
          "status": { "type": "string", "enum": ["todo", "wip", "done"] }
        }
      },
      "x-ai-guid": "任意。マイルストーン一覧表示用。wbs_elements の type:milestone のみで管理する場合は省略可。"
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "enum": ["technical", "business", "resource", "time"] },
          "description": { "type": "string" }
        }
      },
      "x-ai-guid": "制約一覧。type は technical / business / resource / time。"
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "risk": { "type": "string" },
          "impact": { "type": "string", "enum": ["high", "medium", "low"] },
          "mitigation": { "type": "string" }
        }
      },
      "x-ai-guid": "リスク一覧。risk, impact（high/medium/low）, mitigation。"
    },
    "blockers": {
      "type": "array",
      "description": "WBS要素に紐付くブロッカー",
      "items": { "$ref": "../../../../common/scheme.json#/definitions/blocker_wbs" },
      "x-ai-guid": "任意。id, description, related_element_id, resolved。"
    },
    "references": {
      "$ref": "../../../../common/scheme.json#/definitions/references",
      "x-ai-guid": "共通は common/scheme.json#/definitions/references。1件以上の { title, url }。"
    },
    "ai_context": {
      "$ref": "../../../../common/scheme.json#/definitions/ai_context",
      "x-ai-guid": "任意。共通は common/scheme.json#/definitions/ai_context。"
    }
  }
}
