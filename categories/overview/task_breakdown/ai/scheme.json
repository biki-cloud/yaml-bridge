{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "overview/task_breakdown.schema.json",
  "title": "タスク分解",
  "description": "案件でやることを整理するドキュメント",
  "type": "object",
  "required": ["meta", "overview", "tasks", "references"],
  "x-ai-guid": {
    "intro": "案件でやることを整理するドキュメント。",
    "required_sections": ["meta", "overview", "tasks", "references"]
  },
  "properties": {
    "meta": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/meta_base" },
        {
          "properties": {
            "category": { "const": "overview" },
            "doc_type": { "const": "task_breakdown" }
          }
        }
      ],
      "x-ai-guid": "共通は common/scheme.json#/definitions/meta_base。この doc では category: overview, doc_type: task_breakdown。"
    },
    "overview": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/overview_background_goal" },
        {
          "properties": {
            "scope": {
              "type": "object",
              "properties": {
                "in": { "type": "array", "items": { "type": "string" } },
                "out": { "type": "array", "items": { "type": "string" } }
              }
            }
          }
        }
      ],
      "x-ai-guid": "背景・ゴール・related_docs。形式は common/scheme.json#/definitions/overview_background_goal。scope.in/out はこの doc 固有。"
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "category": { "type": "string", "enum": ["investigation", "design", "development", "verification"] },
          "priority": { "type": "string", "enum": ["high", "medium", "low"] },
          "status": { "type": "string", "enum": ["todo", "wip", "done"] },
          "dependencies": { "type": "array", "items": { "type": "string" } },
          "estimated_hours": { "type": "number" }
        }
      },
      "x-ai-guid": "タスク一覧。id, title 必須。category, priority, status, dependencies, estimated_hours。"
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "enum": ["technical", "business", "resource", "time"] },
          "description": { "type": "string" }
        }
      },
      "x-ai-guid": "制約一覧。type は technical / business / resource / time。"
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "risk": { "type": "string" },
          "impact": { "type": "string", "enum": ["high", "medium", "low"] },
          "mitigation": { "type": "string" }
        }
      },
      "x-ai-guid": "リスク一覧。risk, impact（high/medium/low）, mitigation。"
    },
    "references": {
      "$ref": "../../../../common/scheme.json#/definitions/references",
      "x-ai-guid": "共通は common/scheme.json#/definitions/references。1件以上の { title, url }。"
    },
    "ai_context": {
      "$ref": "../../../../common/scheme.json#/definitions/ai_context",
      "x-ai-guid": "任意。共通は common/scheme.json#/definitions/ai_context。"
    }
  }
}
