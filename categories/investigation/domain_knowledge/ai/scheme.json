{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "investigation/domain_knowledge.schema.json",
  "title": "ドメイン知識",
  "description": "既存の仕様・ドメイン知識を調査・整理するドキュメント",
  "type": "object",
  "required": ["meta", "target", "findings", "references"],
  "x-ai-guid": {
    "intro": "既存の仕様・ドメイン知識を調査・整理するドキュメント。",
    "required_sections": ["meta", "target", "findings", "references"]
  },
  "properties": {
    "meta": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/meta_base" },
        {
          "properties": {
            "category": { "const": "investigation" },
            "doc_type": { "const": "domain_knowledge" }
          }
        }
      ],
      "x-ai-guid": "共通は common/scheme.json#/definitions/meta_base。この doc では category: investigation, doc_type: domain_knowledge。"
    },
    "overview": {
      "$ref": "../../../../common/scheme.json#/definitions/overview_background_goal",
      "x-ai-guid": "任意。共通は common/scheme.json#/definitions/overview_background_goal。"
    },
    "target": {
      "type": "object",
      "required": ["description"],
      "properties": {
        "description": { "type": "string" },
        "domain": { "type": "string" },
        "related_docs": { "type": "array", "items": { "type": "string" } }
      },
      "x-ai-guid": "調査対象。description 必須。domain, related_docs（文字列配列）。"
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "question": { "type": "string" },
          "priority": { "type": "string", "enum": ["high", "medium", "low"] }
        }
      }
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["description"],
        "properties": {
          "question_id": { "type": "string" },
          "description": { "type": "string" },
          "source": { "type": "string" },
          "impact": { "type": "string", "enum": ["high", "medium", "low"] }
        }
      },
      "x-ai-guid": "調査結果一覧。description 必須。question_id, source, impact（high/medium/low）。"
    },
    "glossary": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "term": { "type": "string" },
          "definition": { "type": "string" }
        }
      },
      "x-ai-guid": "用語集。term, definition。"
    },
    "conclusions": {
      "type": "array",
      "items": { "type": "string" },
      "x-ai-guid": "結論。"
    },
    "next_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action": { "type": "string" },
          "priority": { "type": "string", "enum": ["must", "should", "could"] }
        }
      },
      "x-ai-guid": "次にやること。action, priority。"
    },
    "references": {
      "$ref": "../../../../common/scheme.json#/definitions/references",
      "x-ai-guid": "共通は common/scheme.json#/definitions/references。1件以上の { title, url }。"
    },
    "ai_context": {
      "$ref": "../../../../common/scheme.json#/definitions/ai_context",
      "x-ai-guid": "任意。共通は common/scheme.json#/definitions/ai_context。"
    }
  }
}
