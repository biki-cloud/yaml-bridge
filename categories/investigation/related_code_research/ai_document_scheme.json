{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "investigation/related_code_research.schema.json",
  "title": "関連コード調査",
  "description": "プロジェクト関連のコードを調査するドキュメント",
  "type": "object",
  "required": ["meta", "target", "findings"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["title", "category", "doc_type", "status", "version"],
      "properties": {
        "title": { "type": "string" },
        "category": { "const": "investigation" },
        "doc_type": { "const": "related_code_research" },
        "status": { "type": "string", "enum": ["todo", "wip", "done"] },
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "author": { "type": "string" },
        "created_at": { "type": "string" },
        "updated_at": { "type": "string" }
      }
    },
    "target": {
      "type": "object",
      "required": ["description"],
      "properties": {
        "description": { "type": "string" },
        "project_context": { "type": "string" },
        "search_scope": { "type": "array", "items": { "type": "string" } }
      }
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "question": { "type": "string" },
          "priority": { "type": "string", "enum": ["high", "medium", "low"] }
        }
      }
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["description"],
        "properties": {
          "question_id": { "type": "string" },
          "description": { "type": "string" },
          "location": { "type": "string" },
          "relevance": { "type": "string", "enum": ["high", "medium", "low"] }
        }
      }
    },
    "conclusions": { "type": "array", "items": { "type": "string" } },
    "next_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action": { "type": "string" },
          "priority": { "type": "string", "enum": ["must", "should", "could"] }
        }
      }
    },
    "references": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "url": { "type": "string" }
        }
      }
    }
  }
}
