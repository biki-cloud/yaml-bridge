{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "investigation/related_code_research.schema.json",
  "title": "関連コード調査",
  "description": "プロジェクト関連のコードを調査するドキュメント",
  "type": "object",
  "required": ["meta", "target", "findings", "references"],
  "x-ai-guid": {
    "intro": "プロジェクト関連のコードを調査するドキュメント。",
    "required_sections": ["meta", "target", "findings", "references"]
  },
  "properties": {
    "meta": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/meta_base" },
        {
          "properties": {
            "category": { "const": "investigation" },
            "doc_type": { "const": "related_code_research" }
          }
        }
      ],
      "x-ai-guid": "共通は common/scheme.json#/definitions/meta_base。この doc では category: investigation, doc_type: related_code_research。"
    },
    "overview": {
      "$ref": "../../../../common/scheme.json#/definitions/overview_background_goal",
      "x-ai-guid": "任意。共通は common/scheme.json#/definitions/overview_background_goal。"
    },
    "target": {
      "type": "object",
      "required": ["description"],
      "properties": {
        "description": { "type": "string" },
        "project_context": { "type": "string" },
        "search_scope": { "type": "array", "items": { "type": "string" } }
      },
      "x-ai-guid": "調査対象。description 必須。project_context, search_scope。"
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "question": { "type": "string" },
          "priority": { "type": "string", "enum": ["high", "medium", "low"] }
        }
      },
      "x-ai-guid": "質問一覧。id, question, priority。"
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["description"],
        "properties": {
          "question_id": { "type": "string" },
          "description": { "type": "string" },
          "location": { "type": "string" },
          "relevance": { "type": "string", "enum": ["high", "medium", "low"] }
        }
      },
      "x-ai-guid": "調査結果一覧。description 必須。question_id, location, relevance（high/medium/low）。"
    },
    "conclusions": {
      "type": "array",
      "items": { "type": "string" },
      "x-ai-guid": "結論。"
    },
    "next_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action": { "type": "string" },
          "priority": { "type": "string", "enum": ["must", "should", "could"] }
        }
      },
      "x-ai-guid": "次にやること。action, priority。"
    },
    "references": {
      "$ref": "../../../../common/scheme.json#/definitions/references",
      "x-ai-guid": "共通は common/scheme.json#/definitions/references。1件以上の { title, url }。"
    },
    "ai_context": {
      "$ref": "../../../../common/scheme.json#/definitions/ai_context",
      "x-ai-guid": "任意。共通は common/scheme.json#/definitions/ai_context。"
    }
  }
}
