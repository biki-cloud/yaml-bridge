{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "investigation/code_understanding.schema.json",
  "title": "コード理解",
  "description": "既存コードを調査・理解するドキュメント",
  "type": "object",
  "required": ["meta", "target", "findings", "references"],
  "properties": {
    "meta": {
      "allOf": [
        { "$ref": "../../../../common/scheme.json#/definitions/meta_base" },
        {
          "properties": {
            "category": { "const": "investigation" },
            "doc_type": { "const": "code_understanding" }
          }
        }
      ]
    },
    "target": {
      "type": "object",
      "required": ["description"],
      "properties": {
        "description": { "type": "string" },
        "repository": { "type": "string" },
        "files": { "type": "array", "items": { "type": "string" } },
        "components": { "type": "array", "items": { "type": "string" } },
        "related_issues": { "type": "array", "items": { "type": "string" } }
      }
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "question": { "type": "string" },
          "priority": { "type": "string", "enum": ["high", "medium", "low"] }
        }
      }
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["description"],
        "properties": {
          "question_id": { "type": "string" },
          "description": { "type": "string" },
          "evidence": { "type": "string" },
          "impact": { "type": "string", "enum": ["high", "medium", "low"] }
        }
      }
    },
    "conclusions": { "type": "array", "items": { "type": "string" } },
    "next_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action": { "type": "string" },
          "priority": { "type": "string", "enum": ["must", "should", "could"] }
        }
      }
    },
    "references": { "$ref": "../../../../common/scheme.json#/definitions/references" },
    "ai_context": { "$ref": "../../../../common/scheme.json#/definitions/ai_context" }
  }
}
