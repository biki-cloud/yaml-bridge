{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "common/scheme.json",
  "definitions": {
    "meta_base": {
      "type": "object",
      "description": "全 doc_type 共通の meta。category / doc_type は各スキーマで const で上書きする",
      "required": ["title", "category", "doc_type", "status", "version"],
      "properties": {
        "title": { "type": "string" },
        "category": { "type": "string" },
        "doc_type": { "type": "string" },
        "status": { "type": "string", "enum": ["todo", "wip", "done"] },
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "author": { "type": "string" },
        "created_at": { "type": "string" },
        "updated_at": { "type": "string" }
      }
    },
    "overview_background_goal": {
      "type": "object",
      "description": "背景・目的・関連資料を必須とする overview。全 doc_type で利用",
      "required": ["background", "goal", "related_docs"],
      "properties": {
        "background": { "type": "string" },
        "goal": { "type": "string" },
        "related_docs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["name", "url"],
            "properties": {
              "name": { "type": "string", "description": "資料名" },
              "url": { "type": "string", "description": "パスまたはURL" }
            }
          },
          "description": "関連する資料（name と url で管理）"
        }
      }
    },
    "references": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["title", "url"],
        "properties": {
          "title": { "type": "string" },
          "url": { "type": "string", "format": "uri" }
        }
      }
    },
    "ai_context": {
      "type": "object",
      "description": "AIの現在の考え・次のアクション（人間用MDで図化される）",
      "properties": {
        "current_thinking": {
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        },
        "next_actions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "label"],
            "properties": {
              "id": { "type": "string" },
              "label": { "type": "string" },
              "detail": { "type": "string" }
            }
          }
        },
        "decision_flow": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "label"],
            "properties": {
              "id": { "type": "string" },
              "label": { "type": "string" },
              "next": { "type": "string" },
              "next_condition": { "type": "array", "items": { "type": "string" } }
            }
          }
        }
      }
    }
  }
}
