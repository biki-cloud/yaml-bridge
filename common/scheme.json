{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "common/scheme.json",
  "definitions": {
    "meta_base": {
      "type": "object",
      "description": "全 doc_type 共通の meta。category / doc_type は各スキーマで const で上書きする",
      "x-ai-guid": "必須: title, category, doc_type, status, version。任意: author, created_at, updated_at。status は todo/wip/done。version は semver（例: 1.0.0）。",
      "required": ["title", "category", "doc_type", "status", "version"],
      "properties": {
        "title": { "type": "string" },
        "category": { "type": "string" },
        "doc_type": { "type": "string" },
        "status": { "type": "string", "enum": ["todo", "wip", "done"] },
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "author": { "type": "string" },
        "created_at": { "type": "string" },
        "updated_at": { "type": "string" }
      }
    },
    "overview_background_goal": {
      "type": "object",
      "description": "背景・目的・関連資料を必須とする overview。全 doc_type で利用",
      "x-ai-guid": "必須: background, goal, related_docs。related_docs は 1件以上の { title, url } 配列（文字列配列ではない）。",
      "required": ["background", "goal", "related_docs"],
      "properties": {
        "background": { "type": "string" },
        "goal": { "type": "string" },
        "related_docs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["title", "url"],
            "properties": {
              "title": { "type": "string", "description": "資料名" },
              "url": { "type": "string", "description": "パスまたはURL" }
            }
          },
          "description": "関連する資料（title と url で管理）"
        }
      }
    },
    "references": {
      "type": "array",
      "minItems": 1,
      "description": "参考文献・参照元（title と url で管理）",
      "x-ai-guid": "1件以上の { title, url } 配列。",
      "items": {
        "type": "object",
        "required": ["title", "url"],
        "properties": {
          "title": { "type": "string", "description": "資料名" },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "パスまたはURL"
          }
        }
      }
    },
    "ai_context": {
      "type": "object",
      "description": "AIの現在の考え・次のアクション（人間用MDで図化される）",
      "x-ai-guid": "任意。current_thinking / next_actions / decision_flow を書くと人間用 MD で図化される。",
      "properties": {
        "current_thinking": {
          "oneOf": [
            { "type": "string" },
            { "type": "array", "items": { "type": "string" } }
          ]
        },
        "next_actions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "label"],
            "properties": {
              "id": { "type": "string" },
              "label": { "type": "string" },
              "detail": { "type": "string" }
            }
          }
        },
        "decision_flow": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "label"],
            "properties": {
              "id": { "type": "string" },
              "label": { "type": "string" },
              "next": { "type": "string" },
              "next_condition": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "open_decision": {
      "type": "object",
      "description": "検討事項（決まらないと先に進めないこと）",
      "required": ["id", "decision_needed"],
      "properties": {
        "id": { "type": "string" },
        "decision_needed": { "type": "string" },
        "detail": { "type": "string" },
        "blocks_tasks": { "type": "array", "items": { "type": "string" }, "description": "WBSタスクID参照" },
        "status": { "type": "string", "enum": ["open", "resolved"] },
        "owner": { "type": "string" },
        "due": { "type": "string" }
      }
    },
    "unclear_point": {
      "type": "object",
      "description": "不明点（仕様・前提が不明な点）",
      "required": ["id", "point"],
      "properties": {
        "id": { "type": "string" },
        "point": { "type": "string" },
        "detail": { "type": "string" },
        "related_docs": {
          "type": "array",
          "items": { "type": "object", "required": ["title", "url"], "properties": { "title": { "type": "string" }, "url": { "type": "string" } } }
        },
        "status": { "type": "string", "enum": ["open", "resolved"] }
      }
    },
    "blocker": {
      "type": "object",
      "description": "ブロッカー（解消しないと進められない事象）",
      "required": ["id", "description", "resolved"],
      "properties": {
        "id": { "type": "string" },
        "description": { "type": "string" },
        "linked_to": { "type": "string", "description": "project_summary / wbs / または task_id" },
        "resolved": { "type": "boolean" },
        "resolved_at": { "type": "string" }
      }
    },
    "blocker_wbs": {
      "type": "object",
      "description": "WBS要素に紐付くブロッカー",
      "required": ["id", "description", "resolved"],
      "properties": {
        "id": { "type": "string" },
        "description": { "type": "string" },
        "related_element_id": { "type": "string", "description": "WBS要素ID" },
        "resolved": { "type": "boolean" },
        "resolved_at": { "type": "string" }
      }
    },
    "required_doc": {
      "type": "object",
      "description": "新規必要ファイル",
      "required": ["title", "path_or_url"],
      "properties": {
        "title": { "type": "string" },
        "path_or_url": { "type": "string" },
        "reason": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "created"] }
      }
    },
    "decision_record": {
      "type": "object",
      "description": "決定事項（決まったことの記録・ADR）",
      "required": ["id", "summary", "conclusion"],
      "properties": {
        "id": { "type": "string" },
        "summary": { "type": "string", "description": "決定の概要" },
        "conclusion": { "type": "string", "description": "結論・決定内容" },
        "context": { "type": "string", "description": "背景・理由" },
        "decided_at": { "type": "string" },
        "decided_by": { "type": "string" },
        "related_open_decision_id": { "type": "string", "description": "紐づく open_items の検討事項 ID" }
      }
    },
    "category_task": {
      "type": "object",
      "description": "カテゴリごとの詳細タスク",
      "required": ["id", "title", "status"],
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "wbs_code": { "type": "string", "description": "WBSのまとまりに対応" },
        "status": { "type": "string", "enum": ["todo", "wip", "done"] },
        "priority": { "type": "string", "enum": ["high", "medium", "low"] },
        "dependencies": { "type": "array", "items": { "type": "string" } },
        "estimated_hours": { "type": "number" },
        "owner": { "type": "string" },
        "due": { "type": "string" }
      }
    }
  }
}
