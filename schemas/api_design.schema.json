{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "api_design.schema.json",
  "title": "API改修設計ドキュメント",
  "description": "API改修の設計を記述するためのスキーマ",
  "type": "object",
  "required": ["meta", "background", "target", "changes"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["title", "type", "version", "status"],
      "properties": {
        "title": { "type": "string" },
        "type": { "type": "string", "enum": ["api_design"] },
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "status": { "type": "string", "enum": ["draft", "review", "approved", "implemented"] },
        "author": { "type": "string" },
        "created_at": { "type": "string" },
        "updated_at": { "type": "string" }
      }
    },
    "background": {
      "type": "object",
      "required": ["purpose"],
      "properties": {
        "purpose": { "type": "string" },
        "context": { "type": "string" },
        "issue_links": { "type": "array", "items": { "type": "string" } }
      }
    },
    "scope": {
      "type": "object",
      "properties": {
        "in": { "type": "array", "items": { "type": "string" } },
        "out": { "type": "array", "items": { "type": "string" } }
      }
    },
    "target": {
      "type": "object",
      "required": ["api_name", "endpoint"],
      "properties": {
        "api_name": { "type": "string" },
        "endpoint": { "type": "string" },
        "method": { "type": "string", "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"] },
        "current_version": { "type": "string" }
      }
    },
    "as_is": {
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "request": { "$ref": "#/definitions/request_spec" },
        "response": { "$ref": "#/definitions/response_spec" },
        "issues": { "type": "array", "items": { "type": "string" } }
      }
    },
    "to_be": {
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "request": { "$ref": "#/definitions/request_spec" },
        "response": { "$ref": "#/definitions/response_spec" }
      }
    },
    "changes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "description"],
        "properties": {
          "type": { "type": "string", "enum": ["add", "modify", "remove", "deprecate"] },
          "target": { "type": "string" },
          "description": { "type": "string" },
          "reason": { "type": "string" },
          "breaking": { "type": "boolean", "default": false }
        }
      }
    },
    "impact": {
      "type": "object",
      "properties": {
        "clients": { "type": "array", "items": { "type": "string" } },
        "databases": { "type": "array", "items": { "type": "string" } },
        "dependencies": { "type": "array", "items": { "type": "string" } }
      }
    },
    "migration": {
      "type": "object",
      "properties": {
        "strategy": { "type": "string", "enum": ["big_bang", "gradual", "feature_flag", "versioning"] },
        "steps": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["order", "description"],
            "properties": {
              "order": { "type": "integer" },
              "description": { "type": "string" },
              "rollback": { "type": "string" }
            }
          }
        },
        "rollback_plan": { "type": "string" }
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["risk", "mitigation"],
        "properties": {
          "risk": { "type": "string" },
          "severity": { "type": "string", "enum": ["low", "medium", "high", "critical"] },
          "probability": { "type": "string", "enum": ["low", "medium", "high"] },
          "mitigation": { "type": "string" }
        }
      }
    },
    "testing": {
      "type": "object",
      "properties": {
        "unit_tests": { "type": "array", "items": { "type": "string" } },
        "integration_tests": { "type": "array", "items": { "type": "string" } },
        "regression_tests": { "type": "array", "items": { "type": "string" } }
      }
    },
    "custom": { "type": "object", "additionalProperties": true }
  },
  "definitions": {
    "param_spec": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": { "type": "string" },
        "type": { "type": "string" },
        "required": { "type": "boolean" },
        "description": { "type": "string" },
        "example": {}
      }
    },
    "request_spec": {
      "type": "object",
      "properties": {
        "headers": { "type": "array", "items": { "$ref": "#/definitions/param_spec" } },
        "query_params": { "type": "array", "items": { "$ref": "#/definitions/param_spec" } },
        "body": { "type": "array", "items": { "$ref": "#/definitions/param_spec" } }
      }
    },
    "response_spec": {
      "type": "object",
      "properties": {
        "status_codes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "code": { "type": "integer" },
              "description": { "type": "string" }
            }
          }
        },
        "body": { "type": "array", "items": { "$ref": "#/definitions/param_spec" } }
      }
    }
  }
}
