{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "infrastructure.schema.json",
  "title": "インフラ構築設計ドキュメント",
  "description": "インフラ・環境構築の設計を記述するためのスキーマ",
  "type": "object",
  "required": ["meta", "background", "target_state"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["title", "type", "version", "status"],
      "properties": {
        "title": { "type": "string" },
        "type": { "type": "string", "enum": ["infrastructure"] },
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
        "status": { "type": "string", "enum": ["draft", "review", "approved", "implemented"] },
        "author": { "type": "string" },
        "created_at": { "type": "string" },
        "updated_at": { "type": "string" }
      }
    },
    "background": {
      "type": "object",
      "required": ["purpose"],
      "properties": {
        "purpose": { "type": "string" },
        "context": { "type": "string" },
        "issue_links": { "type": "array", "items": { "type": "string" } }
      }
    },
    "scope": {
      "type": "object",
      "properties": {
        "in": { "type": "array", "items": { "type": "string" } },
        "out": { "type": "array", "items": { "type": "string" } }
      }
    },
    "current_state": {
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "components": { "type": "array", "items": { "$ref": "#/definitions/infra_component" } },
        "issues": { "type": "array", "items": { "type": "string" } }
      }
    },
    "target_state": {
      "type": "object",
      "required": ["description"],
      "properties": {
        "description": { "type": "string" },
        "components": { "type": "array", "items": { "$ref": "#/definitions/infra_component" } },
        "benefits": { "type": "array", "items": { "type": "string" } }
      }
    },
    "resources": {
      "type": "object",
      "properties": {
        "compute": { "type": "array", "items": { "type": "object" } },
        "network": { "type": "array", "items": { "type": "object" } },
        "storage": { "type": "array", "items": { "type": "object" } },
        "services": { "type": "array", "items": { "type": "object" } }
      }
    },
    "security": {
      "type": "object",
      "properties": {
        "authentication": { "type": "string" },
        "authorization": { "type": "string" },
        "encryption": { "type": "object" },
        "compliance": { "type": "array", "items": { "type": "string" } }
      }
    },
    "monitoring": {
      "type": "object",
      "properties": {
        "metrics": { "type": "array", "items": { "type": "object" } },
        "logging": { "type": "object" },
        "alerting": { "type": "object" }
      }
    },
    "migration": {
      "type": "object",
      "properties": {
        "strategy": { "type": "string", "enum": ["lift_and_shift", "replatform", "refactor", "blue_green", "canary"] },
        "steps": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["order", "description"],
            "properties": {
              "order": { "type": "integer" },
              "description": { "type": "string" },
              "rollback": { "type": "string" }
            }
          }
        },
        "rollback_plan": { "type": "string" },
        "downtime_window": { "type": "string" }
      }
    },
    "cost": {
      "type": "object",
      "properties": {
        "monthly_estimate": { "type": "string" },
        "breakdown": { "type": "array", "items": { "type": "object" } },
        "notes": { "type": "string" }
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["risk", "mitigation"],
        "properties": {
          "risk": { "type": "string" },
          "severity": { "type": "string", "enum": ["low", "medium", "high", "critical"] },
          "probability": { "type": "string", "enum": ["low", "medium", "high"] },
          "mitigation": { "type": "string" }
        }
      }
    },
    "testing": {
      "type": "object",
      "properties": {
        "unit_tests": { "type": "array", "items": { "type": "string" } },
        "integration_tests": { "type": "array", "items": { "type": "string" } },
        "regression_tests": { "type": "array", "items": { "type": "string" } }
      }
    },
    "custom": { "type": "object", "additionalProperties": true }
  },
  "definitions": {
    "infra_component": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["server", "container", "serverless", "database", "cache", "queue", "storage", "network", "cdn", "other"] },
        "description": { "type": "string" },
        "technology": { "type": "string" },
        "connections": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
